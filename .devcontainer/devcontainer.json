{
  "name": "MFE Portal Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "9.0",
      "installUsingApt": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/dapr/cli/dapr-cli:0": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.azure-dev",
        "ms-vscode.vscode-node-azure-pack",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-typescript-next",
        "streetsidesoftware.code-spell-checker",
        "humao.rest-client",
        "ms-playwright.playwright",
        "ckolkman.vscode-postgres"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "dotnet.defaultSolution": "backend/MfePortal.Backend.sln",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[csharp]": {
          "editor.defaultFormatter": "ms-dotnettools.csharp"
        },
        "files.exclude": {
          "**/bin": true,
          "**/obj": true,
          "**/node_modules": true
        },
        "typescript.tsdk": "frontend/shell/node_modules/typescript/lib"
      }
    }
  },

  "forwardPorts": [
    5000,
    5001,
    1234,
    3500,
    5432,
    8080
  ],

  "portsAttributes": {
    "5000": { "label": "Backend HTTP", "onAutoForward": "notify" },
    "5001": { "label": "Backend HTTPS", "onAutoForward": "notify" },
    "1234": { "label": "Frontend (Piral)", "onAutoForward": "openBrowser" },
    "3500": { "label": "Dapr HTTP", "onAutoForward": "silent" },
    "5432": { "label": "PostgreSQL", "onAutoForward": "silent" },
    "8080": { "label": "Aspire Dashboard", "onAutoForward": "notify" }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "remoteUser": "vscode",

  "remoteEnv": {
    "DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true",
    "ASPNETCORE_ENVIRONMENT": "Development",
    "DOTNET_RUNNING_IN_CONTAINER": "true"
  }
}
